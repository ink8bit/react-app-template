{
  "name": "react-starter",
  "version": "1.8.0",
  "main": "index.js",
  "repository": "git@github.com:ink8bit/react-starter.git",
  "author": "ink8bit <ink8bit@users.noreply.github.com>",
  "license": "MIT",
  "engines": {
    "node": "11.13.0"
  },
  "private": true,
  "scripts": {
    "prestart": "npm run build",
    "start": "cd ./dist && npx serve",
    "dev": "(npm audit || true) && parcel src/index.html",
    "prebuild": "npm run clean && npm run lint && npm run test",
    "build": "parcel build src/index.html --no-source-maps",
    "clean": "rm -rf ./dist",
    "lint": "eslint --fix \"**/*.{js,jsx}\"",
    "test": "jest",
    "test:update": "jest -u",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --config  ./.prettierrc \"./src/*.{js,jsx,json,css,html}\" --write",
    "format:check": "prettier --list-different \"./src/*.{js,jsx,json,css,html}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "eslint --fix",
      "npm run lint",
      "git add",
      "npm t"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.8.6",
    "serve": "^11.1.0"
  },
  "dependencies": {
    "@emotion/core": "^10.0.14",
    "@emotion/styled": "^10.0.14",
    "@reach/router": "^1.2.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-loadable": "^5.5.0"
  }
}
